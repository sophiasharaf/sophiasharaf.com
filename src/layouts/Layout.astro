---
interface Props {
	title?: string;
}

const { title = "Sophia Sharaf" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Core palette - bold and confident */
		--color-ink: #1a1a2e;
		--color-paper: #fefcfb;
		--color-warm-white: #fff8f5;

		/* Purple - rich and vibrant */
		--color-purple: #7c3aed;
		--color-purple-light: #ede9fe;
		--color-purple-dark: #5b21b6;

		/* Warm accent - adds energy */
		--color-coral: #f472b6;
		--color-coral-light: #fce7f3;
		--color-peach: #fbbf24;

		/* Neutrals with warmth */
		--color-gray-100: #f8f7f6;
		--color-gray-200: #e8e6e3;
		--color-gray-400: #9ca3af;
		--color-gray-600: #52525b;

		/* Gradients */
		--gradient-hero: linear-gradient(135deg, var(--color-warm-white) 0%, var(--color-purple-light) 50%, var(--color-coral-light) 100%);
		--gradient-accent: linear-gradient(135deg, var(--color-purple) 0%, var(--color-coral) 100%);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif;
		background-color: var(--color-paper);
		color: var(--color-ink);
		line-height: 1.6;
		font-weight: 400;
		letter-spacing: -0.01em;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'DM Serif Display', Georgia, serif;
		font-weight: 400;
		line-height: 1.2;
		letter-spacing: -0.02em;
	}

	h1 { font-size: clamp(2.5rem, 6vw, 4rem); }
	h2 { font-size: clamp(1.75rem, 4vw, 2.5rem); }
	h3 { font-size: clamp(1.25rem, 3vw, 1.5rem); }

	p {
		font-size: 1.05rem;
		line-height: 1.7;
	}

	a {
		color: var(--color-purple);
		text-decoration: none;
		transition: all 0.2s ease;
	}

	a:hover {
		color: var(--color-purple-dark);
	}

	::selection {
		background: var(--color-purple-light);
		color: var(--color-purple-dark);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-content {
		padding: 4rem 0 6rem;
	}

	.page-title {
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: 1rem;
		color: var(--color-ink);
	}

	.page-title-wrapper {
		margin-bottom: 3rem;
		position: relative;
	}

	.page-title-wrapper::after {
		content: '';
		display: block;
		width: 80px;
		height: 4px;
		background: var(--gradient-accent);
		border-radius: 2px;
		margin-top: 1rem;
	}

	.card {
		background: var(--color-paper);
		border: 1px solid var(--color-gray-200);
		border-radius: 16px;
		padding: 2rem;
		margin-bottom: 1.5rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
	}

	.card::before {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 16px;
		padding: 1px;
		background: var(--gradient-accent);
		-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 40px -12px rgba(124, 58, 237, 0.15);
		border-color: transparent;
	}

	.card:hover::before {
		opacity: 1;
	}

	.card h3 {
		color: var(--color-ink);
		margin-bottom: 0.75rem;
	}

	.card p {
		color: var(--color-gray-600);
	}

	.tag {
		display: inline-block;
		background: var(--color-purple-light);
		color: var(--color-purple-dark);
		padding: 0.35rem 0.9rem;
		border-radius: 100px;
		font-size: 0.85rem;
		font-weight: 500;
		margin-right: 0.5rem;
		margin-bottom: 0.5rem;
		transition: all 0.2s ease;
	}

	.tag:hover {
		background: var(--color-purple);
		color: white;
	}

	/* Accent shapes for visual interest */
	.accent-blob {
		position: absolute;
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0.5;
		pointer-events: none;
		z-index: -1;
	}

	/* Button styles */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.875rem 1.75rem;
		border-radius: 100px;
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		border: none;
	}

	.btn-primary {
		background: var(--gradient-accent);
		color: white;
		box-shadow: 0 4px 14px -3px rgba(124, 58, 237, 0.4);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px -3px rgba(124, 58, 237, 0.5);
		color: white;
	}

	.btn-secondary {
		background: var(--color-paper);
		color: var(--color-ink);
		border: 2px solid var(--color-gray-200);
	}

	.btn-secondary:hover {
		border-color: var(--color-purple);
		color: var(--color-purple);
	}

	/* Section styles */
	.section {
		margin-bottom: 4rem;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		color: var(--color-ink);
	}

	.section-header::after {
		content: '';
		flex: 1;
		height: 1px;
		background: var(--color-gray-200);
	}

	/* Intro text styling */
	.intro {
		font-size: 1.2rem;
		color: var(--color-gray-600);
		margin-bottom: 3rem;
		max-width: 650px;
		line-height: 1.8;
	}

	.intro strong {
		color: var(--color-ink);
		font-weight: 600;
	}

	/* Skills/tags styling */
	.skills {
		margin-top: 1.25rem;
		padding-top: 1.25rem;
		border-top: 1px solid var(--color-gray-200);
	}
</style>
